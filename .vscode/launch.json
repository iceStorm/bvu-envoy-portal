  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "index.py",
        "FLASK_ENV": "development",
        "CONFIG_FILE": "src.config.DevelopmentEnvironment",
      },
      "args": [
        "run",
        "--no-debugger",
        "--port", "7501",
        "--host", "localhost",
      ],
      "jinja": true
    }
  ]
}